{% extends 'layout.html.twig' %}
{% block datatableScript %}
    <!-- script for data tables -->
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <!-- <script src="https://cdn.datatables.net/responsive/1.0.7/js/dataTables.responsive.min.js"></script> -->
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.material.min.js"></script>
    <script src="{{ asset('javascript/admintables.js') }}"></script>
{% endblock %}
{% block content %}

    <div class="container container-gestion-restaurant">
        <div class="row">
            <div id="admin" class="col s12">
                <div class="card material-table">
                    <div class="table-header">
                        <span class="table-title">Gestion des restaurants</span>
                        <div class="actions">
                            <a href="#" class="search-toggle waves-effect btn-flat nopadding">
                                <i class="material-icons">search</i>
                            </a>
                        </div>
                    </div>
                    <table id="datatable">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Spécialité</th>
                            <th>Ville</th>
                            <th>Code postale</th>
                            <th>Note</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for restaurant in allRestaurants %}
                            <tr>
                                <td>{{ restaurant.nom }}</td>
                                <td>{{ restaurant.specialite }}</td>
                                <td>{{ restaurant.ville }}</td>
                                <td>{{ restaurant.cp }}</td>
                                {% if restaurant.note %}
                                <td>{{ restaurant.note }}</td>
                                {% else %}
                                <td>Pas encore noté</td>
                                {% endif %}
                                <td></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <hr>
        {% include ':Admin/Restaurants:createRestaurant.html.twig' %}
    </div>
{% endblock %}
